<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ImportacoesActivity" >

    <ImageButton
        android:id="@+id/btAtualizarCidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="onClickAtualizarCidade"
        android:src="@drawable/cidades" />

    <ImageButton
        android:id="@+id/btExportProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btAtualizarCidade"
        android:layout_below="@+id/btAtualizarCidade"
        android:layout_marginTop="20dp"
        android:onClick="onClickAtualizarProduto"
        android:src="@drawable/produtos" />

    <TextView
        android:id="@+id/tvAtualizarProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btExportProduto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Atualizar Produto"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvAtualizarCidades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btAtualizarCidade"
        android:layout_alignRight="@+id/tvAtualizarProduto"
        android:layout_marginBottom="18dp"
        android:text="Atualizar Cidades"
        android:textColor="@android:color/white" />

    <ImageButton
        android:id="@+id/btAtualizarPessoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btAtualizarCidade"
        android:layout_below="@+id/btAtualizarCidade"
        android:layout_marginTop="100dp"
        android:onClick="onClickAtualizarPessoa"
        android:src="@drawable/pessoa" />

    <TextView
        android:id="@+id/tvAtualizarPessoas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btAtualizarPessoa"
        android:layout_alignLeft="@+id/tvAtualizarCidades"
        android:layout_marginBottom="20dp"
        android:text="Atualizar Pessoas"
        android:textColor="@android:color/white" />

</RelativeLayout>